<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:screenOrientation="portrait"
    android:id="@+id/ltrel"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Contact cleaner"
            android:textSize="14pt" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >				
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dip"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/byname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/vbyname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-search double name" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dip"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/byphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/vbyphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-serch double phone" />
            </LinearLayout>
          
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dip"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--Seaches in Phone" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dip"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/sim1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvsim1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--Seaches in Sim1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dip"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/sim2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvsim2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-Seaches in Sim2" />
            </LinearLayout>
             <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:layout_marginLeft="50dip"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/autodel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvautodel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-Auto remove all duplicates with empty fields" />
            </LinearLayout>
        </LinearLayout>
       
        <ScrollView
            android:id="@+id/vScrollView"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_weight="1.06"
            android:fillViewport="true"
            android:minHeight="25px"
            android:minWidth="25px" >

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SCAN" />

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone" 
                android:text="CONTINUE" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
